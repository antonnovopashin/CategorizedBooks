{% extends 'base.html.twig' %}

{% block body %}
    <h1>Список книг</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Год публикации</th>
                <th>Имя автора</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td><a href="{{ path('book_show', { 'id': book.id }) }}">{{ book.id }}</a></td>
                <td>{{ book.name }}</td>
                <td>{{ book.publicationYear }}</td>
                <td>{{ book.author }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('book_show', { 'id': book.id }) }}">посмотреть</a>
                        </li>
                        <li>
                            <a href="{{ path('book_edit', { 'id': book.id }) }}">редактировать</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('book_new') }}">Новая книга</a>
        </li>
    </ul>
{% endblock %}
