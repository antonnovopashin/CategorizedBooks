{% extends 'base.html.twig' %}

{% block body %}
    <h1>Список категорий</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('category_show', { 'id': category.id }) }}" class="btn btn-info btn-xs">посмотреть</a>
                </td>
                <td>
                    <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-xs btn-info">редактировать</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('category_new') }}" class="btn btn-success">Новая категория</a>
        </li>
    </ul>
{% endblock %}
