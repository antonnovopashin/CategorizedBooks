{% extends 'base.html.twig' %}

{% block body %}
    {% if category is not null %}
        <h1>Категория</h1>

        <table>
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Название</th>
                    <td>{{ category.name }}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('category_index') }}">Назад к списку Категорий</a>
            </li>
            <li>
                <a href="{{ path('category_edit', { 'id': category.id }) }}">Редактировать</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                    <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    {% else %}
        <h1>Категория с идентификатором {{ id }} не найдена</h1>
        <a href="{{ path('category_index') }}" class="btn btn-default">Назад к списку категорий</a>
    {% endif %}
{% endblock %}
